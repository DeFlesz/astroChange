<style>
.parents-corner {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
}

.parents-header {
    /* width: 40%; */
    margin-right: 7.9375rem;
}


.parents-cards {
    width: 150rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    column-gap: 1rem;
}

.small-card {
    /* width: 75%; */
    flex-grow: 1;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-evenly;
    padding: 1.5rem;
    max-width: 19.875rem;
    border-radius: 1.5rem;
    background-color: var(--white3);
    gap: 0.5rem;
    text-align: center;
}
    
@media only screen and (max-width: 60rem) {
    .parents-corner {
        flex-direction: column;
    }

    .parents-cards {
        width: 100%;
    }
    .parents-header {
        width: 100%;
    }

    .small-card {
        padding: 1rem;
    }
}
</style>