    .intro-buttons {
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
}

.modules {
    padding: var(--section-spacing) var(--padding-horizontal) var(--section-spacing) var(--padding-horizontal);
}

.testimonials {
    margin: auto;
    padding: var(--section-spacing) var(--padding-horizontal) var(--section-spacing) var(--padding-horizontal);
    align-items: center;
    display: flex;
    flex-wrap: wrap;
}

.cards {
    margin: auto;
    margin-top: var(--content-spacing);
    margin-bottom: var(--content-spacing);
    padding: var(--section-spacing) var(--padding-horizontal) var(--section-spacing) var(--padding-horizontal);
    display: flex;
    flex-direction: row;
    gap: var(--separator-m);
    height: 50dvh;
    /* height: fit-content; */
}

.cards-desc {
    display: flex;
    flex-direction: column;
    max-width: 30%;
    align-items: start;
