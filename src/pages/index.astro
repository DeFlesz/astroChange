<style define:vars={{imageSrc}}>
/* html {
    scroll-snap-type: y mandatory;
} */

html {
    scroll-snap-type: proximity;
}

.snap {
    scroll-snap-align: start;
    scroll-snap-stop: always;
}

.intro {
    display: flex;
    flex-direction: column;
    gap: var(--section-spacing);
    /* height: 100dvh; */
    padding: var(--section-spacing) var(--padding-horizontal);
}

.intro h2, .intro h3 {
    color: var(--primary);
    max-width: 60%;
    align-self: start;
}

.intro-container {
    display: flex;
    flex-direction: column;
    align-self: stretch;
    max-width: 60%;
    align-self: end;
    gap: var(--section-spacing);
}

.intro-container p {
    margin: 0;
    padding: 0;
}
    
@media only screen and (max-width: 40rem) {
    .btn {
        font-size: 0.7rem;
        padding: 0rem 1rem;
        gap: 0.5rem;
    }
    .intro-container {
        align-self: center;
        max-width: 100dvw;
    }
    .intro h2, .intro h3 {
        max-width: 100dvw;
    }        
}

.intro-buttons {
    display: flex;
    flex-direction: row;
    gap: 1rem;
}

.icon-holder {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.scroll-animated-header-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    width: 100dvw;
}

@keyframes scroll-more-animation {
	from {
        margin-top: 0;
        color: transparent;
        /* position: absolute; */
        border-radius: 0;
        width: 100dvw;
        height: 100dvh;

        /* background-image: url(--imageSrc); */
	}
	to {
        color: transparent;
        margin-top: var(--page-padding-top);

        /* top: calc(100dvh + 7.75rem); */
        /* margin-top: 100dvh; */
        /* transform: translateY(100dvh); */
        /* margin: 5dvh;
        margin-left: var(--padding-horizontal);
        margin-right: var(--padding-horizontal); */
        border-radius: var(--corner-l);
        width: calc(100dvw - 2*var(--padding-horizontal));
        height: calc(100dvh - (var(--page-padding-top) + var(--section-spacing)));
	}
}

@keyframes animate-photo {
    from {
        width: 100dvw;
        height: 100dvh;
    }
    to {
        width: calc(100dvw - 2*var(--padding-horizontal));
        height: calc(100dvh - (var(--page-padding-top) + var(--section-spacing)));
        border-radius: var(--corner-l);
        filter: brightness(50%);
    }
}

.animated-image {
    /* position:fixed; */
    position: absolute;
    z-index: 0;
    animation: animate-photo 1s ease forwards;
    animation-delay: 0.5s;
    /* width: pare; */
    width: 100dvw;
    height: 100vh;
    
    object-fit: cover;
}

.scroll-animated-header {
    /* position: fixed; */
    /* position: sticky; */
    /* position: relative; */
    overflow: hidden;
    
    border-radius: 0;
    width: 100dvw;
    height: 100vh;
    display: flex;
    animation: scroll-more-animation 1s linear forwards;
    animation-delay: 0.5s;
    margin-top: 0;
    margin: auto;
    /* /* border-radius: 0px; */
    width: 100dvw;
    /* height: 100dvh; */
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
}

@keyframes scroll-more-animation-text {
	from {
        color: transparent;
        fill: transparent;
        transform: translateY(3.75rem);
	}
	to {
        color: var(--white1);
        fill: var(--white1);
        transform: translateY(0);
	}
}

.scroll-animated-header p, header, svg.desktop-holder, path {
    animation: scroll-more-animation-text 1s ease forwards;
    animation-delay: 1s;
    color: transparent;
    fill: transparent;
    z-index: 3;
}

.icon-holder {
    z-index: 3;
}

header {
    text-align: center; 
    width: fit-content;
    height: fit-content;
    /* padding: 3.75rem; */
    margin: 3.125rem;

    /* Font styles/hero */
    font-family: Manrope;
