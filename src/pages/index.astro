.cards > a {
    display: none;

    /* margin-top: 1.875rem; */
    align-items: center;
    justify-content: center;
}

@media only screen and (max-width: 1200px) {
    .modules {
        grid-template-columns: 1fr;

    }
}
@media only screen and (max-width: 40rem) {
    .cards {
        flex-direction: column;
        height: 90vh;
    }
    .cards-desc {
        align-items: stretch;
        max-width: 100%;
    }

    .cards-desc > a {
        display: none;
    }

    .cards > a {
        display: flex;
    }
}

</style>
